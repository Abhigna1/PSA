<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePage" >

    <Button
        android:id="@+id/btn_Sugar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_Fat"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_Fat"
        android:layout_marginTop="53dp"
        android:text="Sugar"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn_Fat"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_Carbo"
        android:layout_alignRight="@+id/btn_Carbo"
        android:layout_below="@+id/btn_Sugar"
        android:layout_marginTop="15dp"
        android:text="Fat"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn_Carbo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Fat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Carbohydrate"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn_Back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_Carbo"
        android:layout_alignRight="@+id/btn_Carbo"
        android:layout_below="@+id/btn_Carbo"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/btn_Sugar"
        android:text="TextView"
        android:visibility="invisible" />

</RelativeLayout>
