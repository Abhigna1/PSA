<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_barcodescan"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Barcode Scan"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn_search"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_barcodescan"
        android:layout_centerHorizontal="true"
        android:onClick="Search"
        android:text="Search"
        android:textColor="@color/darkviolet"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="Energy"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/txt_name"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/txt_energy"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="22dp"
        android:text="Protein"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/txt_protein"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="16dp"
        android:text="Fat"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="17dp"
        android:text="Carbohydrate"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_carbohy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/txt_fat"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="17dp"
        android:text="Sugar"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/txt_carbohy"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="15dp"
        android:text="Result"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignLeft="@+id/txt_sugar"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/txt_barcode"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:text="Name"
        android:textColor="@color/brown"
        android:textColorHint="@color/blue"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_search"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/btn_search"
        android:text="Product Id:"
        android:textColor="@color/brown"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_protein"
        android:layout_alignBottom="@+id/txt_protein"
        android:layout_alignParentRight="true"
        android:text="g"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_alignParentRight="true"
        android:text="g"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_carbohy"
        android:layout_alignBottom="@+id/txt_carbohy"
        android:layout_alignParentRight="true"
        android:text="g"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView16"
        android:layout_alignParentRight="true"
        android:text="g"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/btn_search"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_energy"
        android:text="KJ"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:text="Product Switch App"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/electriclime"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn_MCheck"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/btn_barcodescan"
        android:onClick="checking"
        android:text="Check"
        android:textColor="@color/darkviolet"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:typeface="serif" />

</RelativeLayout>
